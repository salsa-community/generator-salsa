openapi: 3.0.1
info:
  title: msPerfil-rizoma
  version: 1.0.1-beta
  description: 'Versión desarrollo :: Perfil de usuario rizoma'
servers:
  - url: http://localhost:8102/api
    description: Development server
  - url: https://localhost:8102/api
    description: Development server with TLS Profile
paths:
  # entity-path-to-api
components:
  schemas:
    BaseCatalogo:
      description: Objeto que es utilizado por todo los catálogos en rizoma
      type: object
      properties:
        id:
          description: Identificador de país
          type: string
        nombre:
          description: Nombre de país
          type: string
    Archivo:
      description: Objeto genérico para hacer referencia a archivos
      type: object
      properties:
        nombre:
          description: Nombre de archivo, ej. foto.jpg
          type: string
        contentType:
          description: MIME types de los documentos
          type: string
        uri:
          description: Ubicación del documento
          type: string
    # entity-schema-to-api
  responses:
    NumberResponse:
      content:
        application/json:
          schema:
            format: int64
            minimum: 0
            type: number
        text/plain:
          schema:
            format: int64
            minimum: 0
            type: number
      description: Cantidad de elementos afectados
    NotFound:
      content:
        application/problem+json:
          schema:
            $ref: https://opensource.zalando.com/problem/schema.yaml#/Problem
      description: The specified resource was not found
    BadRequest:
      content:
        application/problem+json:
          schema:
            $ref: https://opensource.zalando.com/problem/schema.yaml#/Problem
      description: BadRequest
    Unauthorized:
      content:
        application/problem+json:
          schema:
            $ref: https://opensource.zalando.com/problem/schema.yaml#/Problem
      description: Unauthorized
    Forbidden:
      content:
        application/problem+json:
          schema:
            $ref: https://opensource.zalando.com/problem/schema.yaml#/Problem
      description: Forbidden
    TooManyRequests:
      content:
        application/problem+json:
          schema:
            $ref: https://opensource.zalando.com/problem/schema.yaml#/Problem
      description: Too Many Requests
    UnexpectedError:
      content:
        application/problem+json:
          schema:
            $ref: https://opensource.zalando.com/problem/schema.yaml#/Problem
      description: Unexpected error
    Conflict:
      description: Indicates a request conflict with current state of the target resource.
      content:
        application/problem+json:
          schema:
            $ref: https://opensource.zalando.com/problem/schema.yaml#/Problem
    # entity-responses-to-api
  parameters:
    pageQuery:
      in: query
      name: page
      description: Page number
      schema:
        type: integer
        format: int32
        minimum: 1
        default: 1
        maximum: 100
    sizeQuery:
      in: query
      name: size
      description: Page size
      schema:
        type: integer
        format: int32
        minimum: 5
        default: 25
        maximum: 100
  securitySchemes:
    oauth:
      flows:
        authorizationCode:
          authorizationUrl: http://localhost:9080/auth/realms/jhipster/protocol/openid-connect/auth
          tokenUrl: http://localhost:9080/auth/realms/jhipster/protocol/openid-connect/token
          scopes:
            jhipster: Jhipster specific claims
            email: Email claims
            profile: Profile claims
      type: oauth2
      description: OAuth2 authentication with KeyCloak
    openId:
      openIdConnectUrl: http://localhost:9080/auth/realms/jhipster/.well-known/openid-configuration
      type: openIdConnect
      description: OpenID Connect authentication with KeyCloak
security:
  - oauth:
      - jhipster
      - email
      - profile
  - openId:
      - jhipster
      - email
      - profile
tags:
  # entity-tags-to-api
